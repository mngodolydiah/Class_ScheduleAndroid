<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="mng.r.lydia.class_schedule.MainActivity"
    tools:showIn="@layout/activity_main">
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/cicon"
    android:layout_above="@+id/emd"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_marginBottom="49dp" />
    <Button
        android:layout_width="150dp"
        android:layout_height="36dp"
        android:text="SIGN-UP"
        android:id="@+id/sign"
        android:textColorHighlight="#0F0F0F"
        android:layout_weight="1"
        android:background="#C0C0C0"
        android:layout_marginBottom="145dp"
        android:textColor="#090909"
        android:typeface="serif"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="150dp"
        android:layout_height="36dp"
        android:text="LOGIN"
        android:id="@+id/login"
        android:background="#C0C0C0"
        android:textColorHighlight="#0F0F0F"
        android:layout_weight="1"
        android:layout_alignTop="@+id/sign"
        android:layout_toRightOf="@+id/sign"
        android:layout_toEndOf="@+id/sign"
        android:layout_marginLeft="41dp"
        android:layout_marginStart="41dp"
        android:textColor="#080808"
        android:typeface="serif" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="User Name"
        android:id="@+id/emd"
        android:inputType="textEmailAddress"
        android:imeOptions="actionDone"
        android:textColorHint="#000033"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Password"
    android:imeOptions="actionDone"
    android:id="@+id/pased"
android:textColorHint="#000033"
    android:password="true"
    android:layout_below="@+id/emd"
    android:layout_alignRight="@+id/login"
    android:layout_alignEnd="@+id/login" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Please Login to your account"
        android:textColor="#0000FF"
        android:id="@+id/textView"

        android:layout_below="@+id/login"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Don't have an account click signup"
        android:textColor="#0000FF"
        android:id="@+id/textView2"
        android:layout_above="@+id/textView3"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Forgot password?"
        android:textColor="#0000FF"
        android:id="@+id/textView3"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="43dp" />


</RelativeLayout>
